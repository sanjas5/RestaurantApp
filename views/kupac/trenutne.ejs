<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
  <link rel="icon" href="https://www.clipartmax.com/png/full/173-1730488_coffee-cup-clip-art-at-clker-com-vector-clip-art-online-coffee.png">

    <title>Trenutne narudžbe</title>
</head>
<body>
  <%-include partials/kupac_nav.ejs%>
  <div class="container mt-5">
  <div class="list-group">
    <%let grupa;%>
    <% narudzbe.forEach((na, i) => { %>
      <%if (grupa !== na.id) {%>
      <%if (i !== 0) {%>
        </a>
      <%}%>
      <a href="#" class="list-group-item list-group-item-action flex-column align-items-start">
      <h4>Narudžba: <%=na.id%></h4>
      <p class="w-25 mb-1"><strong>Dostava najkasnije do:</strong> <%=na.vrijeme.split('.')[0]%></p>
      <small><strong>Isporučeno?:</strong> <%=na.jeliisporuceno ? 'Da' : 'Ne'%></small>
      <hr/>
      <div class="d-flex w-100 justify-content-between align-items-center">
        <h5 class="w-25 mb-1"><%=na.ime%></h5>
        <h5 class="w-25 mb-1">Cijena: <%=na.cijena%> KM</h5>
        <h5 class="w-25 mb-1">Broj: <%=na.broj%></h5>
        <img src="<%=na.slika%>" style="width: 100px; margin-right: 1rem;"/>
        <% const d = new Date(na.datum); const date = d.getDate() + "-" +
        (d.getMonth()+1) + "-" + d.getFullYear(); %>
        <small><strong>Poručeno:</strong> <%=date + " " + na.vrijeme.split('.')[0]%></small>
      </div>
    <%grupa = na.id; } else {%>
      <br/>
      <div class="d-flex w-100 justify-content-between align-items-center">
        <h5 class="w-25 mb-1"><%=na.ime%></h5>
        <h5 class="w-25 mb-1">Cijena: <%=na.cijena%> KM</h5>
        <h5 class="w-25 mb-1">Broj: <%=na.broj%></h5>
        <img src="<%=na.slika%>" style="width: 100px; margin-right: 1rem;"/>
        <% const d = new Date(na.datum); const date = d.getDate() + "-" +
        (d.getMonth()+1) + "-" + d.getFullYear(); %>
        <small><strong>Poručeno:</strong> <%=date + " " + na.vrijeme.split('.')[0]%></small>
      </div>
      <%}%>
    <%})%>
    </a>
  </div>
  </div>
</body>
</html>