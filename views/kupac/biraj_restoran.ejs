<html>
<head>
    <title>Restorani</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link rel='stylesheet' href='/stylesheets/form_style.css' />
    <link rel="icon" href="https://www.clipartmax.com/png/full/173-1730488_coffee-cup-clip-art-at-clker-com-vector-clip-art-online-coffee.png">

</head>
<body>
  <%-include partials/kupac_nav.ejs%>
  <div id="main">
    <table class="table">
        <thead>
           <tr>
            <th>Naziv</th>
            <th>Telefon</th>
            <th>Vrsta</th>
            <th>Kapacitet</th>
            <th>Broj Zvjezdica</th>
            <th>Radno Vrijeme</th>
            <th>Lokacija</th>
           </tr>
        </thead>
        <tbody>
    <%restorani.forEach(a=> {%>
        <tr style="cursor: pointer;" onclick="goToRestaurant(<%=a.id%>)">
        <td> <%=a.naziv%> </td>
        <td> <%=a.telefon%> </td>
        <td> <%=a.vrsta_restorana%> </td>
        <td> <%=a.kapacitet%> </td>
        <td> <%=a.broj_zvjezdica%> </td>
        <td>  Od <%=a.radno_vrijeme_od%>, Do <%=a.radno_vrijeme_do%> </td>
        <td> Sarajevo </td>
        </tr>
        <%})
        %>
        </tbody>
    </table>
    <hr />
</div>
<script
  src="https://code.jquery.com/jquery-3.5.1.min.js"
  integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
  crossorigin="anonymous"></script>
<script>
  function goToRestaurant(id) {
    window.location.href = `/customer/${id}`;
    return false;
  }
</script>
</body>
</html>