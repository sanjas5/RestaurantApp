<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/lista_restorana.css' />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
    <link rel="icon" href="https://www.clipartmax.com/png/full/173-1730488_coffee-cup-clip-art-at-clker-com-vector-clip-art-online-coffee.png">

</head>
<body>
    <%-include partials/admin_nav.ejs%>
<h1 id="naslov"><%= title %></h1>
<%restorani.forEach(
    r=> {%>
    <div class="restorani">
    <h1><%= r.naziv%></h1>
    <p>Telefon: <%=r.telefon%></p>
    <p>Radno vrijeme: <%=r.radno_vrijeme_od%> : <%=r.radno_vrijeme_do%> h</p>
    <a href="/adm/adm_rest/<%=r.id%>">Dodaj administratora </a> <br>
    <a href="/adm/restoran/<%=r.id%>">Detalji o restoranu</a>
    </div>
<%})
%>
<div id="main">
<form action="/adm/restoran" method="post">
    <div class="form-group">
        <label for="ime">Naziv:</label><br>
        <input type="text" class="form-control input" id="ime" name="naziv"><br>
    </div>
    <div class="form-group">
        <label for="phone">Telefon:</label><br>
        <input type="text" class="form-control input" id="phone" name="phone"><br>
    </div>
    <div class="form-group">
        <label for="date">Datum otvaranja:</label><br>
        <input type="date" class="form-control input" id="date" name="date"><br>
    </div>
    <div class="form-group">
        <label for="time">Radno vrijeme otvaranja:</label><br>
        <input type="time" class="form-control input" id="time" name="time1"><br>
    </div>
    <div class="form-group">
        <label for="time">Radno vrijeme zatvaranja:</label><br>
        <input type="time" class="form-control input" id="time" name="time2"><br>
    </div>
    <div class="form-group">
        <label for="radnici">Broj radnika:</label><br>
        <input type="number" class="form-control input" id="radnici" name="radnici"><br>
    </div>
    <div class="form-group">
        <label for="zvijezde">Broj zvjezdica:</label><br>
        <input type="number" class="form-control input" id="zvijezde" name="zvijezde"><br>
    </div>

    <button type="submit" class="btn btn-default">Submit</button>

</form>
</div>
